<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>
        <main class="main h-auto mb-5 d-flex justify-content-center">
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17 mt-2 mx-lg-5 w-100 mb-4 d-flex justify-content-center"
                style="background-image: url('/img/login-bg.jpg');
      ">


                <div class="bg-white col-lg-6 col-sm-8 col-11 p-5 my-5">

                    <!-- Pills navs -->
                    <ul class="nav border  border-dark border-2 nav-justified mb-3 bg-white" id="ex1" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active font-weight-bold text-dark" id="tab-login" data-mdb-toggle="pill"
                                href="/user/login" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item color-01 text-white" role="presentation">
                            <a class="nav-link" id="tab-register" data-mdb-toggle="pill" role="tab"
                                aria-controls="pills-register" aria-selected="false">Register</a>
                        </li>
                    </ul>
                    <!-- Pills navs -->

                    <!-- Pills content -->
                    <div class="tab-content mt-5">



                        <div class="" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                            <form action="/user/signUp" method="post">


                                <!-- Name input -->
                                <div class="form-outline mb-4 required">
                                    <input type="text" id="name" class="form-control" name="name" />
                                    <label class="form-label" for="name">Name</label>
                                </div>

                                <!-- Username input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="email" class="form-control" name="email" />
                                    <label class="form-label" for="email">Email</label>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="tel" id="phone" class="form-control" name="phone" />
                                    <label class="form-label" for="phone">Phone</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input title='enter email id of referrer' type="email" id="referralEmail"
                                        class="form-control" name="referralEmail" />
                                    <label class="form-label" for="referralEmail">Referral Email</label>
                                </div>


                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="Password" class="form-control" name="password" />
                                    <label class="form-label" for="Password">Password</label>
                                </div>



                                <!-- Submit button -->
                                <button data-id="signInBtn" type="submit" class="btn btn-dark btn-block mb-3">Sign
                                    in</button>
                            </form>
                        </div>
                    </div>
                </div>





            </div>
            <!-- End .login-page section-bg -->
        </main>
        <!-- End .main -->





        <%- include('../users/userFooter.ejs') %>

            <script src="/js/user/removeResendData.js"></script>

