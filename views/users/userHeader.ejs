<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-7">
                    <div class="header__top__left">

                    </div>
                </div>
                <div class="col-lg-6 col-md-5">
                    <div class="header__top__right">
                        <div class="header__top__links">

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="header__logo">
                    <a href="/"><img src="/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li><a href="/">Home </a></li>
                        <li><a href="/search">Search</a></li>
                        <li><a href="/user/orders">Orders</a></li>

                    </ul>
                </nav>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="header__nav__option ">

                    <div style="padding-top: 3px;">

                        <a href="/search"><img src="/img/icon/search.png" alt=""></a>

                        <a href="/user/wishList"><img src="/img/icon/heart.png" alt=""></a>

                        <a href="/user/cart"><img src="/img/icon/cart.png" alt=""></a>

                        <% if(userID) { %>

                            <a class="font-weight-bolder text-dark" href="/user/profile">Profile</a>
                            <%} else {%>
                                <a class="font-weight-bolder text-dark" href="/user/login">Login</a>

                                <% } %>

                    </div>


                </div>
            </div>
        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
    </div>
</header>
<!-- Header Section End -->

<% if (message){%>

    <div class=" container alert alert-dismissible fade show alert-<%=message.type %>" role="alert">

        <button class="btn-close" type="button" data-bs-dismiss='alert' aria-label="close"></button>

        <strong class="container">
            <%= message.message %>
        </strong>

        <% if(message.verification) { %>

            <div class="container">

                <a data-id="emailVerificationBtn" href="/user/emailVerification" type=" submit"
                    class="btn btn-outline-success">Verify Your Email</a>

            </div>



            <% } %>



    </div>
    <% } %>


        <div hidden id="notification-message" class="container notification ">

            <p id="messageLine"> </p>

            <button class="close" id="notificationClose"><i class="fa-solid fa-xmark"
                    style="color: #d2cfce;"></i></button>

        </div>