<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>


        <!-- Breadcrumb Section Begin -->
        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Edit Profile</h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <span>Edit Profile</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- Page title -->

                    <!-- Form START -->

                    <div class="row mb-5 gx-5">
                        <!-- Contact detail -->
                        <div class="col-xxl-8 mb-5 mb-xxl-0">
                            <div class="bg-secondary-soft px-4 pt-5 pb-0 rounded">
                                <div class="row g-3">
                                    <h3 class="mb-5 mt-5 text-center font-weight-bold "> Edit Your Personal Details</h3>


                                    <form class="row" id="editProfileForm">
                                        <!-- First Name -->

                                        <div class="d-flex justify-content-center flex-column align-items-center mb-4">

                                            <label class="form-label">Profile Pic</label>
                                            <input id="imageInput" name="profileImg" class="form-control w-75"
                                                type="file" placeholder="select your profile pic" accept="image/*">


                                        </div>

                                        <div class="col-md-6">

                                            <label class="form-label">First Name </label>

                                            <input type="text" class="form-control" aria-label="First name"
                                                name="firstName" value="<%= user.firstName %>">
                                        </div>
                                        <!-- Last name -->
                                        <div class="col-md-6">
                                            <label class="form-label">Last Name </label>

                                            <input type="text" class="form-control" placeholder=""
                                                aria-label="Last name" name="lastName" value="<%= user.lastName %>">
                                        </div>
                                        <!-- Phone number -->
                                        <div class="col-md-6">
                                            <label class="form-label">Phone number </label>
                                            <input type="text" class="form-control" placeholder=""
                                                aria-label="Phone number" name="phone" value="<%= user.phone%>">
                                        </div>
                                        <!-- Mobile number -->
                                        <div class="col-md-6">
                                            <label class="form-label">Joined Date </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="Phone number" value="<%= user.joined_date %>">
                                        </div>
                                        <!-- Email -->
                                        <div class="col-md-6">
                                            <label for="inputEmail4" class="form-label">Email </label>
                                            <input readonly type="email" class="form-control" id="inputEmail4"
                                                value="<%= user.email %>">
                                        </div>
                                        <!-- Skype -->
                                        <div class="col-md-6">
                                            <label class="form-label">Wallet </label>
                                            <input readonly type="text" class="form-control" placeholder=""
                                                aria-label="Phone number" value="nill">
                                        </div>


                                        <div class="mt-5 w-100 d-flex justify-content-center">

                                            <button style="width: 60%;" class=" btn-dark p-1" type="submit">Edit
                                                Profile</button>

                                        </div>

                                    </form>
                                </div>
                            </div> <!-- Row END -->
                        </div>
                    </div>


                    <!-- Form END -->
                </div>
            </div>
        </div>


        <div id="modal"
            style="position: absolute;top:0 ; z-index: 11; height: 100vh; width: 100vw; background-color: rgba(0, 0, 0, 0.479);"
            class="d-flex d-none justify-content-center align-items-center ">

            <div class=" d-flex flex-column justify-content-center"
                style=" background-color: rgb(255, 255, 255); height: 450px ; width: 50%; ">

                <div style="height: 80%;" class="  d-flex justify-content-center align-items-center ">

                    <img id="cropImg" style="height: 90% ;width:80%;" alt="">

                </div>

                <div class="d-flex  justify-content-center ">
                    <button id="cropBtn" class="nav-link mt-4 mb-4"
                        style="background-color: black; color:whitesmoke ;padding :10px"> CROP THE
                        IMG</button>

                </div>





            </div>
        </div>

        <%- include('../users/userFooter.ejs') %>

            <script src="/js/user/editProfile.js"></script>
            <%- include('../layouts/footer.ejs') %>