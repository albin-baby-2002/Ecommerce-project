<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>
        <section class="shop-details">
            <div class="product__details__pic h-50">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product__details__breadcrumb">
                                <a href="./index.html">Home</a>
                                <a href="./shop.html">Shop</a>
                                <span>Product Details</span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">

                        <div class="col-lg-2 col-md-3 d-flex align-items-md-center justify-content-center">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">
                                        <div class="product__thumb__pic " data-id="bg-render"
                                            data-for-bg="/img/productImages/<%=product.images.find((img)=>img.toLowerCase().includes('mainimg')) %>"
                                            style="
                                            background-size: cover;
                                            background-repeat: no-repeat;
                                            height: 120px; width: 95px;">
                                        </div>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">
                                        <div class="product__thumb__pic " data-id="bg-render"
                                            data-for-bg="/img/productImages/<%=product.images.find((img)=>img.toLowerCase().includes('secondimg')) %>"
                                            style="
                                            background-size: cover;
                                            background-repeat: no-repeat;
                                            height: 120px; width: 95px;">
                                        </div>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">
                                        <div class="product__thumb__pic " data-id="bg-render"
                                            data-for-bg="/img/productImages/<%=product.images.find((img)=>img.toLowerCase().includes('thirdimg')) %>"
                                            style="
                                            background-size: cover;
                                            background-repeat: no-repeat;
                                            height: 120px; width: 95px;">
                                        </div>
                                    </a>
                                </li>



                            </ul>
                        </div>
                        <div class="col-lg-8 col-md-9 d-flex align-items-center justify-content-center">
                            <div class="tab-content">
                                <div class="tab-pane active" id="tabs-1" role="tabpanel">

                                    <div class="productGroup" data-group="<%=product.groupingID%>"></div>
                                    <div class="product__details__pic__item d-flex align-items-center">
                                        <img src="/img/productImages/<%=product.images.find((img)=>img.toLowerCase().includes('mainimg')) %>"
                                            style="height: 600px; " alt="">
                                    </div>
                                </div>
                                <div class="tab-pane" id="tabs-2" role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="/img/productImages/<%=product.images.find((img)=>img.toLowerCase().includes('secondimg')) %>"
                                            style="height: 600px; " alt="">

                                    </div>
                                </div>
                                <div class="tab-pane" id="tabs-3" role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="/img/productImages/<%=product.images.find((img)=>img.toLowerCase().includes('thirdimg')) %>"
                                            style="height: 600px; " alt="">

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product__details__content">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <div class="product__details__text" data-id="<%= product._id%>">

                                <% if(product.stock <=0){ %>
                                    <h3 class="text-danger pb-2 font-weight-bold">Out Of Stock</h3>

                                    <% } %>


                                        <% if(category.onDiscount){ %>

                                            <h6 class="mb-4 " style="color: rgb(225, 145, 64);">Buy One And Get Flat
                                                <%=category.discountAmount %>
                                                    Off
                                                    On Total
                                                    Purchase
                                            </h6>

                                            <%}%>

                                                <h4>
                                                    <%=product.name%>
                                                </h4>
                                                <div class="rating">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <span> - 5 Reviews</span>
                                                </div>

                                                <div class="d-flex justify-content-center">
                                                    <h3 class="mr-3" <% if(product.onOffer && product.rateOfDiscount>
                                                        0){%>
                                                        style="color:grey;text-decoration: line-through;"

                                                        <%}%>

                                                            >
                                                            ₹ <%=product.price%>

                                                    </h3>

                                                    <% if(product.onOffer && product.rateOfDiscount>0){ %>

                                                        <h3>
                                                            ₹ <%=product.offerPrice%>
                                                        </h3>
                                                        <%}%>


                                                </div>


                                                <p>
                                                    <%=product.description%>
                                                </p>
                                                <div class="product__details__option">
                                                    <div class="product__details__option__size">
                                                        <span>Size:</span>

                                                        <% for(let i=0; i < variants.length ;i++) { %>

                                                            <% if(variants[i].color.toLowerCase()===currentColor.toLowerCase()
                                                                ) {%>

                                                                <label
                                                                    class="size-button <% if(variants[i].size.toLowerCase() === currentSize.toLowerCase()){%> border-dark selected <%}%> "
                                                                    for="<%=variants[i].size %>"
                                                                    data-size="<%=variants[i].size %>">
                                                                    <%=variants[i].size %>
                                                                        <input class="size-radio"
                                                                            value="<%=variants[i].size %>" name="size"
                                                                            type="radio" id="<%=variants[i].size %>">
                                                                </label>

                                                                <% } %>

                                                                    <% }%>

                                                    </div>

                                                    <div class="product__details__option__size">
                                                        <span>Color:</span>


                                                        <% for(let i=0; i < colorList.length ;i++) { %>



                                                            <label
                                                                class="color-button <% if(colorList[i].toLowerCase() === currentColor.toLowerCase()){%> border-dark selected <%}%> "
                                                                for="<%=colorList[i]%>" data-color="<%=colorList[i]%>">
                                                                <%=colorList[i]%>
                                                                    <input class="color-radio" name="color"
                                                                        value="<%=colorList[i]%>" type="radio"
                                                                        id="<%=colorList[i]%>">
                                                            </label>

                                                            <% } %>

                                                    </div>

                                                </div>
                                                <div class="product__details__cart__option">
                                                    <div class="quantity">
                                                        <div class="pro-qty">
                                                            <input data-id="quantity" type="text" value="1">
                                                        </div>
                                                    </div>
                                                    <button onclick="addToCart('<%=product._id%>')" class="primary-btn 
                                        
                                        <% if(product.stock <= 0){ %>
                                            
                                            text-decoration-line-through
                                            
                                            <% } %>
                                        
                                        " <% if(product.stock <=0){ %>

                                                        disabled

                                                        <% } %>

                                                            >add to
                                                            cart
                                                    </button>
                                                </div>

                                                <div
                                                    class="product__details__btns__option d-flex justify-content-center">

                                                    <button onclick="addToWishList()" id="addToWishList"
                                                        class="nav-link add-hover-opacity" style="font-weight: bold;"><i
                                                            class="fa fa-heart"></i>
                                                        <span>ADD
                                                            TO WISHLIST</span>
                                                    </button>


                                                </div>

                                                <div class="product__details__last__option mb-5">
                                                    <h5><span>Guaranteed Safe Checkout</span></h5>




                                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </section>
        <!-- Shop Details Section End -->




        <%- include('../users/userFooter.ejs') %>

            <script src="/js/user/productDetails.js"></script>

            <%- include('../layouts/footer.ejs') %>