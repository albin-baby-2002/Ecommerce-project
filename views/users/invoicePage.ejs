                                        <th>TOTAL</th>


                                    </tr>
                                </thead>
                                <tbody style="border-color: black;padding-bottom: 1.4rem;">


                                    <% for(let i=0; i < productsData.length ; i++){ %>


                                        <tr class="text-center ">

                                            <td style="background-color: #ffffff;">

                                                <%=(i+1)%>

                                            </td>

                                            <td style="background-color: #ffffff;">


                                                <%= productsData[i].productInfo.name %>

                                            </td>

                                            <td style="background-color: #ffffff;">
                                                <%=productsData[i].quantity%>

                                            </td>

                                            <td style="background-color: #ffffff;">
                                                <%=productsData[i].productInfo.price%>

                                            </td>

                                            <td style="background-color: #ffffff;">
                                                <%=productsData[i].totalPrice%>
                                            </td>





                                        </tr><!-- END TR-->
                                        <%}%>



                                </tbody>
                            </table>

                            <ul class="checkout__total__all px-5 mb-2" style="border-bottom: 1px solid black;">

                                <li>Gross Total <span>Rs.<%=orderData.grossTotal %>
                                    </span></li>
                                <li>Coupon Discount <span>- <%=orderData.discountAmount %></span></li>

                                <li>Flat Category Discount <span>- <%=orderData.categoryDiscount %></span></li>


                            </ul>


                            <ul class="checkout__total__all border-0 px-5">

                                <li class="font-weight-bold">Final Price <span style="color: rgb(0, 0, 0);">Rs.
                                        <%=orderData.finalPrice %>
                                    </span></li>


                            </ul>

                        </div>








                    </div>


                </div>


            </div>




        </div>

    </section>
    <!-- Checkout Section End -->




    <script>

        function renderBg() {

            const products = document.querySelectorAll('[data-id="bg-render"]');

            products.forEach((product) => {

                const imgUrl = product.getAttribute('data-for-bg');

                product.style.backgroundImage = `url('${imgUrl}')`;

            })

        };



        const clickable_Divs = document.querySelectorAll('[click-id="productDetailsLink"]');

        clickable_Divs.forEach((clickableDiv) => {
            const groupID = clickableDiv.getAttribute('group-id');
            const colorID = clickableDiv.getAttribute('color-id');

            clickableDiv.addEventListener('click', function () {

                window.location.href = `/user/productDetails/${groupID}/?color=${colorID}`;
            });
        })




        window.addEventListener('load', renderBg);


        const notificationBtn = document.getElementById('notificationClose');
        const notificationMessage = document.getElementById('notification-message');
        const messageLine = document.getElementById('messageLine');

        notificationBtn.addEventListener('click', (e) => {

            notificationMessage.hidden = true
        })




    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
