<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>


        <!-- Breadcrumb Section Begin -->
        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Payment Page</h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <a href="./shop.html">Shop</a>
                                <span>Payment Page</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Breadcrumb Section End -->

        <!-- Checkout Section Begin -->
        <section class="checkout spad p-0">
            <div class="container">


                <div class="row ">

                    <h1 class="text-center my-5 font-weight-bold">YOUR ORDER SUMMARY </h1>

                    <div class="col-lg-12 col-md-12 h-auto">


                        <div class="checkout__order m-3">

                            <h4 class="order__title">Delivery Details</h4>

                            <div class="mt-4 font-weight-bold" style="
                            background-color: #f3f2ee;
                            
                         padding: 1rem;">


                                <P class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    <%=address.fullName%>
                                </P>





                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    <%=address.addressLine%>
                                </p>
                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    <%=address.locality%>
                                </p>
                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    <%=address.city%>
                                </p>
                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    <%=address.state%>
                                </p>
                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    <%=address.country%>
                                </p>
                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    Pincode:
                                    <%=address.pinCode%>
                                </p>
                                <p class=" mb-0"
                                    style="font-family:'Times New Roman', Times, serif; font-weight: bold;">
                                    phone:
                                    <%=address.phone%>
                                </p>







                            </div>



                        </div>


                    </div>



                    <div class="col-lg-12 col-md-12">
                        <div class="checkout__order m-3 ">
                            <h4 class="order__title">Product Detail</h4>
                            <div class="checkout__order__products">Product <span>Total</span></div>
                            <ul class="checkout__total__products">






                                <% for(let i=0; i < productsData.length ; i++){ %>
                                    <li>

                                        <div class="d-flex  ">

                                            <div class="" style="width: 74%;">

                                                <%=i+1%>. <%=productsData[i].productInfo.name%> (
                                                        <%=productsData[i].quantity%> )

                                            </div>

                                            <div style="width: 26%;" class="text-right d-inline-block">

                                                <%=productsData[i].totalPrice%>.0

                                            </div>

                                        </div>

                                    </li>

                                    <%}%>


                            </ul>
                            <ul class="checkout__total__all">

                                <li>Gross Total <span>Rs.<%=orderData.grossTotal %></span></li>
                                <li>Coupon Discount <span>- <%=orderData.discountAmount %></span></li>


                            </ul>


                            <ul class="checkout__total__all">

                                <li>Final Price <span>Rs.<%=orderData.finalPrice %></span></li>


                            </ul>

                            <p>Payment Method : <span class="text-uppercase">
                                    <%=orderData.paymentMethod %>
                                </span>
                            </p>


                            <% if(orderData.paymentMethod==='cod' ) { %>
                                <div class=" w-100 d-flex justify-content-center">
                                    <button id="codOrderPlacement" order-id="<%=orderData._id %>"
                                        style="font-size: 1.1rem;" class="nav-link bg-dark text-white px-4 py-2">PLACE
                                        ORDER</button>
                                </div>

                                <%}%>

                                    <% if(orderData.paymentMethod==='onlinePayment' ) { %>
                                        <div class=" w-100 d-flex justify-content-center">
                                            <button id="payButton" order-id="<%=orderData._id %>"
                                                style="font-size: 1.1rem;"
                                                class="nav-link bg-dark text-white px-4 py-2"> PAY NOW AND PLACE
                                                ORDER</button>
                                        </div>

                                        <%}%>






                        </div>
                    </div>
                </div>




            </div>

        </section>
        <!-- Checkout Section End -->



        <%- include('../users/userFooter.ejs') %>

            <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

            <script src="/js/user/placeOrder.js"></script>
            <script src="/js/user/razorpay.js"></script>


            <%- include('../layouts/footer.ejs') %>