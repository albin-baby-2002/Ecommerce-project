<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>




        <main class="main h-auto mb-5 d-flex justify-content-center">
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17 mt-2 mx-lg-5 w-100 mb-4 d-flex justify-content-center"
                style="background-image: url('/img/login-bg.jpg');
      ">


                <div class="bg-white col-lg-6 col-sm-8 col-11 p-5 my-5">

                    <!-- Pills navs -->
                    <ul class="nav border border-dark border-2 nav-justified mb-3 " id="ex1" role="tablist">
                        <li class="nav-item bg-dark" role="presentation">
                            <a class="nav-link active color-01 text-white" id="tab-login" data-mdb-toggle="pill" href=""
                                role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class=" nav-link text-dark font-weight-bold" id="tab-register" data-mdb-toggle="pill"
                                href="/user/signUp" role="tab" aria-controls="pills-register"
                                aria-selected="false">Register</a>
                        </li>
                    </ul>
                    <!-- Pills navs -->

                    <!-- Pills content -->
                    <div class="tab-content mt-5">
                        <div class="" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                            <form action="/user/login" method="post">

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="loginName" class="form-control" name="email" />
                                    <label class="form-label" for="loginName">Email or username</label>
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="loginPassword" class="form-control" name="password" />
                                    <label class="form-label" for="loginPassword">Password</label>
                                </div>

                                <!-- 2 column grid layout -->
                                <div class="row mb-4 d-flex justify-content-center">


                                    <div class="col-md-6 d-flex justify-content-center">
                                        <!-- Simple link -->
                                        <a data-id="forgotPasswordBtn" class="text-secondary"
                                            href="/user/forgotPassword">Forgot password?</a>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-dark btn-block mb-4">Sign in</button>

                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p>Not a member? <a href="/user/signUp">Register</a></p>
                                </div>
                            </form>
                        </div>





                    </div>
                </div>





            </div>
            <!-- End .login-page section-bg -->
        </main>
        <!-- End .main -->





        <%- include('../users/userFooter.ejs') %>
            <script src="/js/loginPageBtn.js"></script>
