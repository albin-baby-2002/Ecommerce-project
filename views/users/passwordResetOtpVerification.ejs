<%- include('../layouts/header.ejs') %>

    <%- include('../users/userHeader.ejs') %>
        <main class="main h-auto mb-5 d-flex justify-content-center">
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17 mt-2 mx-lg-5 w-lg-75 mb-4 d-flex justify-content-center"
                style="background-image: url('/img/login-bg.jpg');
      ">


                <div class="bg-white w-75 p-5 my-5">

                    <h2 class="text-center font-weight-bold m-3">Enter the OTP to reset your password</h2>


                    <div class="tab-content">
                        <div class="" id="pills-login" role="tabpanel" aria-labelledby="tab-login">


                            <form action="/user/forgotPassword/verifyOTP" method="POST">


                                <div class="form-outline mb-4">
                                    <input type="otp" id="otp" name="otp" class="form-control" />

                                </div>



                                <!-- Submit button -->

                                <button type="submit" class="btn btn-dark btn-block mt-3 mb-4">VERIFY</button>


                            </form>

                            <p class="text-center">Your can resend the OTP in : </p>

                            <div class="counterDiv d-flex align-content-center justify-content-center">

                                <p class="font-weight-bold text-success " style="font-size: 1.2rem;"><span
                                        id="timer-minutes">00</span> :<span id="timer-seconds">00</span></p>
                            </div>


                            <div class="d-flex justify-content-center">
                                <button data-id="resendOtpButton" onclick="resendOTP()" class="nav-link  "
                                    style="color:rgb(35, 92, 190); text-decoration: underline; font-weight: bold;">RESEND
                                    OTP</button>
                            </div>
                        </div>





                    </div>
                </div>





            </div>

        </main>
        <!-- End .main -->





        <%- include('../users/userFooter.ejs') %>

            <script src="/js/otpResend.js"></script>

            <%- include('../layouts/footer.ejs') %>