<%- include('../layouts/header.ejs') %>

    <%- include('../admin/adminHeader.ejs') %>

        <!-- Breadcrumb Section Begin -->

        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Add Products</h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <span>Add Products</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <main class="main my-5">
            <div class="container">

                <h2 class="text-center">Enter New Product Details</h2>

                <form class="container  w-50 my-5" id="myForm" action="/admin/addProduct" method="post"
                    enctype="multipart/form-data">


                    <div class="form-outline mb-4">
                        <input type="text" id="product-name" class="form-control" name="name" required />
                        <label class="form-label mt-2" for="product-name">Product name </label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="number" id="groupingID" class="form-control" name="groupingID" required
                            title=" id for grouping product variants" />
                        <label class="form-label mt-2" for="groupingID">Grouping ID </label>
                    </div>

                    <div class="form-outline mb-4 d-flex flex-column ">

                        <select name="category" id="category" required>

                            <% categories.forEach((category)=>{ %>

                                <option value="<%= category._id %>">
                                    <%= category.name %>
                                </option>

                                <%} ) %>



                        </select>

                        <label class="   mt-2" for="category">Category</label>

                    </div>


                    <div class="form-outline mb-4">

                        <input type="text" id="size" class="form-control" name="size" required />
                        <label class="form-label mt-2" for="size">Size</label>

                    </div>

                    <div class="form-outline mb-4">

                        <input type="text" id="color" class="form-control" name="color" required />

                        <label class="form-label mt-2" for="color">Color</label>

                    </div>



                    <div class="form-outline mb-4">

                        <input type="number" id="price" class="form-control" name="price" required />
                        <label class="form-label mt-2" for="price">Price</label>

                    </div>

                    <div class="form-outline mb-4">
                        <input type="number" id="stock" class="form-control" name="stock" required />
                        <label class="form-label mt-2" for="stock">Stock no </label>
                    </div>

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="UPLOADBASICIMG">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="mainImg" aria-describedby="UPLOADBASICIMG"
                                name="mainImg" required>
                            <label class="custom-file-label" for="mainImg"> Main Image </label>
                        </div>
                    </div>

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="UPLOADBASICTHUMB">Upload</span>
                        </div>
                        <div class="custom-file ">
                            <input type="file" class="custom-file-input" id="mainImgThumbnail"
                                aria-describedby="UPLOADBASICTHUMB" name="mainImgThumbnail" required>
                            <label class="custom-file-label" for="mainImgThumbnail"> Main Image Thumbnail </label>
                        </div>
                    </div>

                    <!-- second images -->

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="secondIMG">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="secondImg" aria-describedby="secondIMG"
                                name="secondImg" required>
                            <label class="custom-file-label" for="secondImg"> Second Image</label>
                        </div>
                    </div>


                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="secondIMGThumbnail">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="secondImgThumbnail"
                                aria-describedby="secondIMGThumbnail" name="secondImgThumbnail" required>
                            <label class="custom-file-label" for="secondImgThumbnail"> Second Image Thumbnail</label>
                        </div>
                    </div>

                    <!-- third images -->

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="thirdIMG">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="thirdImg" aria-describedby="thirdIMG"
                                name="thirdImg" required>
                            <label class="custom-file-label" for="thirdImg"> Third Image</label>
                        </div>
                    </div>


                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="thirdIMGThumbnail">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="thirdImgThumbnail"
                                aria-describedby="thirdIMGThumbnail" name="thirdImgThumbnail" required>
                            <label class="custom-file-label" for="thirdImgThumbnail"> Third Image Thumbnail</label>
                        </div>
                    </div>


