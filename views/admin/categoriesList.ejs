<%- include('../layouts/header.ejs') %>

    <%- include('../admin/adminHeader.ejs') %>

        <!-- Breadcrumb Section Begin -->

        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Category List</h4>
                            <div class="breadcrumb__links">
                                <a href="/admin/dashboard">Home</a>
                                <span>Category List</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <main class="main my-5">
            <div class="container-lg">

                <a class="btn btn-outline-success mb-3" href="/admin/addCategory">Add Category</a>

                <div class="table-responsive" id="no-more-tables">
                    <table class="table table-striped bg-white" id="myTable">
                        <thead class=" ">
                            <tr class="text-center">
                                <th class="bg-dark text-center text-white" style="font-size: .9rem ; width: 200px;"
                                    scope="col" class="sorting ">
                                    Name</th>
                                <th class="bg-dark text-center text-white" style="font-size: 15px ; " scope="col"
                                    class="sorting">
                                    Description</th>
                                <th class="bg-dark text-center text-white" style="font-size: 15px ; " scope="col"
                                    class="sorting">
                                    Discounted</th>
                                <th class="bg-dark text-center text-white" style="font-size: 15px ; " scope="col"
                                    class="sorting">
                                    Discount </th>

                                <th class="bg-dark text-center text-white text-center"
                                    style="font-size: 15px; width: 200px" scope="col">Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            <% if(categories && categories.length>0){ %>
                                <% for(let i=0; i < categories.length ;i++) { %>


                                    <tr row-id="<%= categories[i]._id%>" class="text-center" style="font-size: .9rem;">
                                        <td data-title="Name" style="width: 200px;">
                                            <%= categories[i].name %>
                                        </td>
                                        <td data-title="Email" style="min-width: 150px;">
                                            <%= categories[i].description %>
                                        </td>
                                        <td data-title="Email">
                                            <%= categories[i].onDiscount %>
                                        </td>
                                        <td data-title="Email">
                                            <%= categories[i].discountAmount %>
                                        </td>

                                        <td>


                                            <a class="btn   btn-outline-success btn-sm mt-2"
                                                href="/admin/editCategory/<%=categories[i]._id %>""> <i class=" fa-solid
                                                fa-pen-to-square" style="color: #294d22;"></i>

                                            </a>



                                            <button data-id=" <%=categories[i]._id %>" class=" deleteButton btn
                                                btn-sm mx-4 btn-outline-danger mt-2 m-md-0">
                                                <i class="fa-solid fa-trash" style="color: #a70c46;"></i>

                                            </button>

                                        </td>





                                    </tr>

                                    <% } %>
                                        <% } else { %>

                                            <tr>

                                                <td class="text-danger" colspan="5">Categories Not Found</td>
                                            </tr>

                                            <% } %>





                        </tbody>
                    </table>
                </div>
            </div>
        </main>




        <%- include('../admin/adminFooter.ejs') %>

            <script src="/js/dataTables.js"></script>

            <script src="/js/admin/categoryList.js"></script>

            <%- include('../layouts/footer.ejs') %>