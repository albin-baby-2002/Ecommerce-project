<%- include('../layouts/header.ejs') %>

    <%- include('../admin/adminHeader.ejs') %>

        <!-- Breadcrumb Section Begin -->

        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Add Coupon </h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <span>Add Coupon</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <main class="main my-5">
            <div class="container">

                <h2 class="text-center">Enter new coupon details</h2>

                <form class="container  w-50 my-5" id="addCouponForm">


                    <div class="form-outline mb-4">

                        <input type="text" id="product-name" class="form-control" name="code" required
                            title="should be unique code " />

                        <label class="form-label mt-2" for="product-name">Coupon Code </label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="text" class="form-control" name="description" required />

                        <label class="form-label mt-2" for="groupingID">Description </label>
                    </div>




                    <div class="form-outline mb-4">

                        <input type="number" id="size" class="form-control" name="rateOfDiscount" required />
                        <label class="form-label mt-2" for="size">Rate of Discount</label>

                    </div>

                    <div class="form-outline mb-4">

                        <input type="number" id="color" class="form-control" name="maximumDiscount" required />

                        <label class="form-label mt-2" for="color">Maximum Discount</label>

                    </div>



                    <div class="form-outline mb-4">

                        <input type="date" id="price" class="form-control" name="expirationDate" required />
                        <label class="form-label mt-2" for="price">Expiration Date</label>

                    </div>

                    <div>



                        <input type="radio" name="isActive" value="true" required>
                        <label>True</label>

                        <input type="radio" name="isActive" value="false">
                        <label>False</label>

                        <label class="d-block pb-3">Is Active</label>


                    </div>






                    <!-- Submit button -->
                    <button type="submit" class="btn btn-dark btn-block mb-4"> Add Coupon</button>


                </form>


            </div>
        </main>




        <%- include('../admin/adminFooter.ejs') %>

            <script src="/js/admin/addCoupon.js"></script>

            <%- include('../layouts/footer.ejs') %>