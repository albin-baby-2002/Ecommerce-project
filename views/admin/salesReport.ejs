<%- include('../layouts/header.ejs') %>

    <%- include('../admin/adminHeader.ejs') %>

        <!-- Breadcrumb Section Begin -->

        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Sales Report</h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <span>Sales Report</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <main class="main my-5">
            <div class="container">

                <div class="d-flex justify-content-between my-5">

                    <div>
                        <button id="getExcelBtn" class="nav-link p-2"
                            style="background-color: black ; color: azure;">Download as
                            Excel</button>
                    </div>

                    <div class="d-flex align-items-center">
                        <label class="mb-0 mr-1" for="">From</label>
                        <input id="startingDate" style="height: 100%;" type="date" value="<%=startingDate%>">

                        <label class="ml-3 mb-0 mr-1" for="">To</label>
                        <input id="endingDate" style="height: 100%;" type="date" value="<%=endingDate%>">

                        <button id="getReport" class="ml-4 nav-link p-2"
                            style="background-color: black ; color: azure;">Get
                            Report</button>


                    </div>



                </div>

                <% if(orders.length>0) { %>






                    <div class="table-responsive" id="no-more-tables">
                        <table class="table table-striped bg-white pt-3" id="myTable">
                            <thead class=" ">
                                <tr class="">
                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col"
                                        class="sorting ">
                                        Order ID </th>

                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col"
                                        class="sorting ">
                                        Date </th>
                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col"
                                        class="sorting">
                                        Products In Order
                                    </th>

                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col"
                                        class="sorting">
                                        Status</th>

                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col"
                                        class="sorting">
                                        pay status</th>

                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col"
                                        class="sorting">
                                        GT
                                    </th>



                                    <th class="bg-dark text-white" text-center style="font-size: 15px;" scope="col"
                                        class="sorting">
                                        Discount
                                    </th>


                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col">
                                        Final
                                        Price
                                    </th>
                                    <th class="bg-dark text-white text-center" style="font-size: 15px;" scope="col">
                                        Client
                                        processing
                                    </th>



                                </tr>
                            </thead>
                            <tbody>

                                <% for(let i=0; i < orders.length ;i++) { %>


                                    <tr data-id="" class="text-center" style="font-size: medium; ">

                                        <td data-title="Name">
                                            <%=orders[i]._id%>
                                        </td>

                                        <td style="max-width: 150px;" data-title="Name">

                                            <% const options={ year: 'numeric' , month: 'short' , day: 'numeric' ,
                                                hour: '2-digit' , minute: '2-digit' , second: '2-digit' ,
                                                timeZoneName: 'short' }; const
                                                shortDate=orders[i].orderDate.toLocaleDateString('en-US', options); %>

                                                <%=shortDate %>

                                        </td>
                                        <td style="max-width: 200px;" data-title="Email">

                                            <ul>
                                                <% for(let j=0 ; j< orders[i].orderedItems.length ; j++ ){%>

                                                    <li class="text-uppercase list-unstyled mt-3 ">
                                                        <%=orders[i].orderedItems[j].productInfo[0].name%> (
                                                            <%=orders[i].orderedItems[j].quantity%>
                                                                )
                                                    </li>


                                                    <% }%>

                                            </ul>


                                        </td>

                                        <td data-title="Name">
                                            <%=orders[i].orderStatus%>
                                        </td>

                                        <td data-title="Mobile">
                                            <%=orders[i].paymentStatus%>

                                        </td>

                                        <td data-title="Mobile">
                                            <%=orders[i].grossTotal%>

                                        </td>

                                        <td data-title="Mobile">
                                            <%=orders[i].discountAmount%>

                                        </td>
                                        <td data-title="Mobile">
                                            <%=orders[i].finalPrice%>

                                        </td>


                                        <td data-title="Mobile">
                                            <% if(orders[i].clientOrderProcessingCompleted){%>
                                                completed

                                                <%} else {%>

                                                    pending <%}%>

                                        </td>







                                    </tr>

                                    <%}%>










                            </tbody>
                        </table>
                    </div>

                    <%} else{%>

                        <div class=" text-danger">Products Not Found
                        </div>

                        <%}%>
            </div>
        </main>




        <%- include('../admin/adminFooter.ejs') %>

            <script src="/js/dataTables.js"></script>

            <script src="/js/admin/getReport.js"></script>


            <%- include('../layouts/footer.ejs') %>