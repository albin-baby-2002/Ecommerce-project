<%- include('../layouts/header.ejs') %>

    <%- include('../admin/adminHeader.ejs') %>

        <!-- Breadcrumb Section Begin -->

        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Edit Products</h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <span>Edit Products</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <main class="main my-5">
            <div class="container">

                <form class="container  w-50 my-5" action="/admin/editProduct/<%=product._id%>" method="post"
                    enctype="multipart/form-data">


                    <div class="form-outline mb-4">
                        <input type="text" id="product-name" class="form-control" name="name" required
                            value="<%= product.name%>" />
                        <label class="form-label mt-2" for="product-name">Product name </label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="number" id="groupingID" class="form-control" name="groupingID" required
                            title=" id for grouping product variants" value="<%= product.groupingID %>" />
                        <label class="form-label mt-2" for="groupingID">Grouping ID </label>
                    </div>


                    <div class="form-outline mb-4 d-flex flex-column ">

                        <select name="category" id="category" required>

                            <% categories.forEach((category)=>{ %>

                                <option value="<%= category._id %>"
                                    <%=category.name.toLowerCase()===product.category.toLowerCase()? 'selected' :'' %> >
                                    <%= category.name %>
                                </option>

                                <%} ) %>



                        </select>

                        <label class="   mt-2" for="category">Category</label>

                    </div>


                    <div class="form-outline mb-4">

                        <input type="text" id="size" class="form-control" name="size" required
                            value="<%= product.size%>" />
                        <label class="form-label mt-2" for="size">Size</label>

                    </div>

                    <div class="form-outline mb-4">

                        <input type="text" id="color" class="form-control" name="color" required
                            value="<%= product.color%>" />
                        <label class="form-label mt-2" for="color">Color</label>

                    </div>


                    <div class="form-outline mb-4">

                        <input type="number" id="price" class="form-control" name="price" required
                            value="<%= product.price%>" />
                        <label class="form-label mt-2" for="price">Price</label>

                    </div>

                    <div class="form-outline mb-4">
                        <input type="number" id="stock" class="form-control" name="stock" required
                            value="<%= product.stock%>" />
                        <label class="form-label mt-2" for="stock">Stock no </label>
                    </div>


                    <div class="form-outline mb-4 d-flex flex-column ">

                        <select name="onSale" id="onSale">



                            <option value="true" <%=product.onSale ? 'selected' :'' %> >
                                True
                            </option>

                            <option value="false" <%=product.onSale? '' :' selected' %> >
                                False
                            </option>







                        </select>

                        <label class="   mt-2" for="onSale">onSale</label>

                    </div>




                    <div class="form-outline mb-2">
                        <textarea name="description" id="description" cols="49" rows="5"
                            required><%= product.description %></textarea>
                        <label class="form-label mt-2" for="description">Description</label>
                    </div>


                    <!-- images upload -->


                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="UPLOADBASICIMG">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="mainImg" aria-describedby="UPLOADBASICIMG"
                                name="mainImg">
                            <label class="custom-file-label" for="mainImg"> Main Image replacement </label>
                        </div>
                    </div>

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="UPLOADBASICTHUMB">Upload</span>
                        </div>
                        <div class="custom-file ">
                            <input type="file" class="custom-file-input" id="mainImgThumbnail"
                                aria-describedby="UPLOADBASICTHUMB" name="mainImgThumbnail">
                            <label class="custom-file-label" for="mainImgThumbnail"> Main Image thumbnail replacement
                            </label>
                        </div>
                    </div>

                    <!-- second images -->

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="secondIMG">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="secondImg" aria-describedby="secondIMG"
                                name="secondImg">
                            <label class="custom-file-label" for="secondImg"> Second Image replacement</label>
                        </div>
                    </div>


                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="secondIMGThumbnail">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="secondImgThumbnail"
                                aria-describedby="secondIMGThumbnail" name="secondImgThumbnail">
                            <label class="custom-file-label" for="secondImgThumbnail"> Second Image thumbnail
                                replacement </label>
                        </div>
                    </div>

                    <!-- third images -->

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="thirdIMG">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="thirdImg" aria-describedby="thirdIMG"
                                name="thirdImg">
                            <label class="custom-file-label" for="thirdImg"> Third Image replacement</label>
                        </div>
                    </div>


                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="thirdIMGThumbnail">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="thirdImgThumbnail"
                                aria-describedby="thirdIMGThumbnail" name="thirdImgThumbnail">
                            <label class="custom-file-label" for="thirdImgThumbnail"> Third Image thumbnail replacement
                            </label>
                        </div>
                    </div>


