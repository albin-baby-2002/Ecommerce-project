                            <label class="custom-file-label" for="fourthImgThumbnail"> Fourth Image thumbnail
                                replacement </label>
                        </div>
                    </div> -->







                    <!-- Submit button -->
                    <button type="submit" class="btn btn-dark btn-block mb-4"> Edit Product</button>


                </form>


            </div>
        </main>




